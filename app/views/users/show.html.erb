<div class="container">
  <%= render 'shared/second_header' %>
  <p class="title">マイページ</p>
  <div class="AccountPage">

    <div class="card_info">
      <%# <div class="Account__title">
      </div><br> %>
      <div class="Card__title">
        <p class="sub_title">カード情報</p>
      </div>
      <div class="Card_info">
        【カード番号】
        <br>
        <%= "**** **** **** " + @card[:last4] %>
        <%# カード番号の下4桁を取得 %>

        <br>
        【有効期限】
        <br>
        <%= @card[:exp_month] %>
        <%# 有効期限の「月」を取得 %>
        /
        <%= @card[:exp_year] %>
        <%# 有効期限の「年」を取得 %>
      </div>
    </div>

    <div class="Account__info">
      <p class="sub_title">ユーザー情報<%= link_to '[変更]', edit_user_path, class:'user edit' %></p>
      <ul>
        <li><%= @user.first_name %><%= @user.last_name %><br /></li>
        <li>☎︎<%= @user.tel%></li>
        <li>✉️<%= @user.email%></li>
      </ul>
    </div>

    <div class="send__info">
      <p class="sub_title">送付先情報<%= link_to '[変更]', users_address_edit_path, class:'send edit' %></p>
      <ul>
        <li>🏠〒<%= @user.address.postcode %><br /></li>
        <li>&emsp;<%= @user.address.prefecture_name %><%= @user.address.city%><br /></li>
        <li>&emsp;<%= @user.address.street %></li>
        <li>&emsp;<%= @user.address.building %></li>
      </ul>
    </div>

  </div>