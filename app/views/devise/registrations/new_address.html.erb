<h2>住所情報登録</h2>

<%= form_for @address do |f| %>
  <%= render "devise/shared/error_messages", resource: @address %>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :都道府県 %><br />
    <%= f.text_field :prefecture %>
  </div>

  <div class="field">
    <%= f.label :市町村 %><br />
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :番地 %><br />
    <%= f.text_field :street %>
  </div>

  <div class="field">
    <%= f.label :建物名・号室 %><br />
    <%= f.text_field :building %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>