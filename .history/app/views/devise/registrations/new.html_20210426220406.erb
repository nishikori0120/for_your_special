<%= render 'shared/second_header' %>
<div class="container">
  <p class="title">はじめてのご注文の方</p>

  <%= form_for(@user, url: user_registration_path) do |f| %>
    <%= render "devise/shared/error_messages", resource: @user %>

    <div class="field">
      <%= f.label :お名前 %><br />
      <%= f.text_area :first_name, autofocus: true, placeholder:"例）伊藤" %>
      <%= f.text_area :last_name,  placeholder:"例）健太郎" %>
    </div>

    <div class="field">
      <%= f.label :お名前カナ %><br />
      <%= f.text_area :first_name_kana, placeholder:"例）イトウ" %>
      <%= f.text_area :last_name_kana, placeholder:"例）ケンタロウ" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :電話番号 %><i>（ハイフン不要）</i><br />
      <%= f.text_field :tel %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>※<%= @minimum_password_length %>文字以上</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワード（確認用） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "次へ進む" %>
    </div>
  <% end %>
</div>
